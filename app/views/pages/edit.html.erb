<h2 class="text-2xl font-semibold mb-6">Edit Tracked Product</h2>

<%= form_with model: @page, local: true do |form| %>
  <div class="mb-4">
    <%= form.label :name, "Product Name", class: "block font-medium mb-1" %>
    <%= form.text_field :name, class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :url, "Product URL", class: "block font-medium mb-1" %>
    <%= form.text_field :url, class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :check_type, "Check Type", class: "block font-medium mb-1" %>
    <%= form.select :check_type, [["Text Match", "text"], ["Element Exists", "exists"], ["Element Not Exists", "not_exists"]], {}, class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :selector, "Selector", class: "block font-medium mb-1" %>
    <%= form.text_field :selector, class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :match_text, "Text to Match (for 'Text Match' only)", class: "block font-medium mb-1" %>
    <%= form.text_field :match_text, class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div class="flex space-x-3 mt-6">
    <%= form.submit "Update Product", class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded" %>
    <%= link_to "Back", page_path(@page), class: "bg-gray-400 hover:bg-gray-500 text-white px-4 py-2 rounded" %>
  </div>
<% end %>
