<div class="max-w-3xl mx-auto py-12">
  <h1 class="text-4xl font-bold mb-8">Stock Checker</h1>
  <h2 class="text-2xl font-semibold mb-6">Tracked Products</h2>

  <% @pages.each do |page| %>
    <div class="bg-white rounded shadow p-6 mb-6 border border-gray-200">
      <h3 class="text-xl font-bold text-indigo-600 mb-2">
        <%= link_to page.name, page_path(page), class: "hover:underline" %>
      </h3>
      <p class="text-sm text-gray-700"><span class="font-semibold">Check Type:</span> <%= page.check_type %></p>
      <p class="text-sm text-gray-700"><span class="font-semibold">Selector:</span> <%= page.selector %></p>
      <p class="text-sm text-gray-700"><span class="font-semibold">Match Text:</span> <%= page.match_text.presence || "N/A" %></p>

        <div class="flex items-center space-x-4 mt-2">
            <%= link_to "View", page_path(page), class: "text-blue-600 font-semibold" %>
            <%= button_to "Delete", page_path(page), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 font-semibold bg-transparent border-none p-0" %>
        </div>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to "+ Add New Product", new_page_path, class: "text-indigo-600 hover:underline font-medium" %>
  </div>
</div>
