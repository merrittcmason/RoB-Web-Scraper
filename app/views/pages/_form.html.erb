<%= form_with(model: page, local: true) do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :url, "Product URL" %><br>
    <%= form.text_field :url %>
  </div>

  <div>
    <%= form.label :check_type, "Check Type" %><br>
    <%= form.select :check_type, options_for_select(["text", "exists", "not_exists"], page.check_type) %>
  </div>

  <div>
    <%= form.label :selector, "Selector" %><br>
    <%= form.text_field :selector %>
  </div>

  <div>
    <%= form.label :match_text, "Text to Match (Only for 'text' check)" %><br>
    <%= form.text_field :match_text %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
